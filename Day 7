bool isPalindrome(int x) {
    long int rem,sum=0,temp=x;  
    if(x<0 || (x>0 && x%10==0)){
        return false;
    }
    while(x>0){ // reversing the number
        rem=x%10;
        sum=sum*10+rem;
        x/=10;
    }
    if(sum==temp)
        return true;
    else
        return false;
    return true;
}
